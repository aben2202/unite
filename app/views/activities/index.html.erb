<div class="span3">
	<%- model_class = Category -%>
	<div class="page-header">
	  <h2><%=t '.title', :default => model_class.model_name.human.pluralize %></h2>
	</div>
	<% if @parent_directory %>
		<%= link_to "Back to #{@parent_directory.name}", 
					activities_path(category_id: @parent_directory.id) %>
	<% end %>
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <% if @current_directory %>
	      	<th><%= model_class.human_attribute_name(@current_directory.name) %></th>
	      <% else %>
	      	<th>Main</th>
	      <% end %>
	    </tr>
	  </thead>
	  <tbody>
	    <% @categories.each do |category| %>
	      <tr>
	        <td><%= link_to "#{category.name}", activities_path(category_id: category) %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

	<%= link_to t('.new', :default => t("helpers.links.new")),
	            new_category_path,
	            :class => 'btn btn-primary' %>

</div>

<div class="span6 offset1">
	<%- model_class = Activity -%>
	<div class="page-header">
	  <h2> Activities </h2>
	</div>
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th><%= model_class.human_attribute_name(:title) %></th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @activities.each do |activity| %>
		  <tr>
		    <td><%= link_to "#{activity.title}", activity_path(activity) %></td>
		  </tr>
	    <% end %>
	  </tbody>
	</table>

	<% if signed_in? %>
		<%= link_to t('.new', :default => t("helpers.links.new")),
		            new_activity_path,
		            :class => 'btn btn-primary' %>
	<% end %>
</div>