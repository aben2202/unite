<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">

    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
      <%= render 'shared/text_field', field: :username, f: f %><br /><br />
    </div>

    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= render 'shared/text_field', field: :email, f: f %><br /><br />
    </div>

    <%= f.label :first_name, :class => 'control-label' %>
    <div class="controls">
        <%= render 'shared/text_field', field: :first_name, f: f %><br /><br />
    </div>

    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= render 'shared/text_field', field: :last_name, f: f %><br /><br />
    </div>
    
    <%= f.label :age, :class => 'control-label' %>
    <div class="controls">
      <%= render 'shared/number_field', field: :age, f: f %><br /><br />
    </div>
    
    <%= f.label :zipcode, :class => 'control-label' %>
    <div class="controls">
      <%= render 'shared/text_field', field: :zipcode, f: f %><br /><br />
    </div>

    <% if signed_in? && @user == current_user %>
      <%= f.label :password, :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password %><br /><br />
      </div>

      <%= f.label :password_confirmation, :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password_confirmation %><br /><br /><br />
      </div>
    <% end %>



    <div class="form-actions">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                    :back, :class => 'btn'  %>
      <% if (signed_in? && @user == current_user) || current_user.admin? %>
        <%= f.submit "Update", :class => 'btn btn-primary' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                user_path(@user),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you want to delete your account?  All your previous data will be lost.')) },
                :class => 'btn btn-danger far-right' %>
      <% end %>
    </div>
  </div>
<% end %>

