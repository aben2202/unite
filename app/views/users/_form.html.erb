<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">

    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
      <%= render 'shared/text_field', field: :username, f: f %><br /><br />
    </div>

    <%= f.label :first_name, :class => 'control-label' %>
    <div class="controls">
        <%= render 'shared/text_field', field: :first_name, f: f %><br /><br />
    </div>

    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= render 'shared/text_field', field: :last_name, f: f %><br /><br />
    </div>
    
    <%= f.label :age, :class => 'control-label' %>
    <div class="controls">
      <%= render 'shared/number_field', field: :age, f: f %><br /><br />
    </div>
    
    <%= f.label :zipcode, :class => 'control-label' %>
    <div class="controls">
      <%= render 'shared/text_field', field: :last_name, f: f %><br /><br />
    </div>

    <div class="form-actions">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                    :back, :class => 'btn'  %>
      <% if signed_in? && @user == current_user %>
        <%= f.submit "Update", :class => 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
<% end %>

